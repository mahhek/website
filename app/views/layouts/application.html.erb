<%= render 'layouts/header' %>
<div id="main-container">
  <div>
    <div style="margin-top: 5px;">
      <%=link_to raw('<img  alt="LOGO"/>'), :root %>
      <%= render 'layouts/navigation' %>
    </div>
    <% if notice or alert %>
      <div style="padding-left: 10px;padding-top: 10px;width: 91%;float: left;height: 30px;margin: 10px;background-color: darkcyan;color: white;">
        <div style="width: auto;float: left;"><%= notice %></div>
        <div style="width: auto;float: left;"><%= alert %></div>
      </div>
    <% end %>
  </div>
  <div style="min-height: 480px;float: left;width: 100%;margin-bottom: 10px;">
    <% unless user_signed_in? %>
      <div style="float: left;text-align: left;width: 100%;height: 50px;">
        <%= link_to "Sign up", new_user_registration_path %> <%=  "or" %>
        <%= link_to "Sign in", new_user_session_path %>
      </div>
    <% end %>
    <div style="float: left;width: 18%;">
      <%= render 'layouts/sidebox_default' %>
    </div>

    <div style="float: left;width: 75%;margin-left: 10px;">
      <%= yield %>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</div>
